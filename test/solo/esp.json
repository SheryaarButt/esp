/*
    esp.json - ESP configuration file
 */
{
    name: 'esptest',
    description: 'ESP Unit Tests with Server',
    esp: {
        app: true
    },
    http: {
        server: {
            listen: [
                'http://127.0.0.1:7300',
            ],
        },
        "log": {
            "location": "error.log",
            "level": 4
        },
        "trace": {
            "location": "trace.log",
            "level": 4
        },
        limits: {
            rxBody: 'unlimited',
        },
        routes: [
            {
                pattern: '^/solo/{action}$',
                methods: [ 'GET', 'POST' ],
                source: 'solo.c',
                target: 'solo/$1',
                stream: true,

            }
        ]
    }
}
